{
    "name": "personal-monorepo",
    "version": "0.1.0",
    "private": true,
    "description": "Personal Logseq Plugin and Documentation Monorepo",
    "type": "module",
    "packageManager": "pnpm@9.15.4",
    "scripts": {
        "dev": "turbo dev",
        "build": "turbo build",
        "test": "turbo test",
        "lint": "turbo lint",
        "format": "turbo format",
        "type-check": "turbo type-check",
        "clean": "turbo clean && rm -rf node_modules",
        "storybook": "storybook dev -p 6006",
        "build-storybook": "storybook build",
        "docs": "pnpm --filter @personal/docs dev",
        "docs:build": "pnpm --filter @personal/docs build",
        "docs:preview": "pnpm --filter @personal/docs preview"
    },
    "keywords": [
        "logseq-plugin",
        "documentation",
        "monorepo",
        "turborepo"
    ],
    "license": "MIT",
    "devDependencies": {
        "@eslint/js": "catalog:",
        "@storybook/addon-a11y": "catalog:",
        "@storybook/addon-docs": "^10.2.12",
        "@storybook/svelte-vite": "^10.2.11",
        "@sveltejs/vite-plugin-svelte": "catalog:",
        "@testing-library/svelte": "^5.3.1",
        "@testing-library/user-event": "^14.6.1",
        "@vanilla-extract/vite-plugin": "catalog:",
        "eslint": "catalog:",
        "eslint-plugin-svelte": "catalog:",
        "globals": "catalog:",
        "jiti": "catalog:",
        "prettier-plugin-svelte": "^3.5.0",
        "storybook": "^10.2.11",
        "svelte": "catalog:",
        "svelte-dnd-action": "^0.9.69",
        "turbo": "^2.7.6",
        "typescript": "catalog:",
        "typescript-eslint": "catalog:",
        "vite": "catalog:",
        "vitest": "catalog:"
    },
    "engines": {
        "node": ">=20.0.0",
        "pnpm": ">=9.0.0"
    },
    "pnpm": {
        "peerDependencyRules": {
            "allowedVersions": {
                "@docsearch/react>react": ">=19.0.0",
                "@docsearch/react>react-dom": ">=19.0.0"
            }
        }
    }
}
