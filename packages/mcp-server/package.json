{
    "name": "@personal/mcp-server",
    "version": "0.1.0",
    "description": "Personal MCP Server for Cursor",
    "type": "module",
    "main": "dist/index.js",
    "bin": {
        "personal-mcp-server": "dist/index.js"
    },
    "scripts": {
        "build": "tsc",
        "build:chmod": "tsc && chmod +x dist/index.js",
        "dev": "tsc --watch",
        "start": "node dist/index.js",
        "type-check": "tsc --noEmit",
        "lint": "eslint . --ext ts --report-unused-disable-directives --max-warnings 0",
        "format": "prettier --write \"src/**/*.{ts,json,md}\"",
        "format:check": "prettier --check \"src/**/*.{ts,json,md}\""
    },
    "keywords": [
        "mcp",
        "model-context-protocol",
        "cursor",
        "typescript"
    ],
    "license": "MIT",
    "dependencies": {
        "@modelcontextprotocol/sdk": "^1.25.3",
        "mathjs": "^15.1.0"
    },
    "devDependencies": {
        "@eslint/js": "catalog:",
        "@types/node": "catalog:",
        "eslint": "catalog:",
        "globals": "catalog:",
        "prettier": "catalog:",
        "typescript": "catalog:",
        "typescript-eslint": "catalog:"
    }
}
