{
    "name": "@personal/ecount-dev-tool",
    "version": "1.0.0",
    "description": "ecount.com Development Environment Manager Chrome Extension",
    "type": "module",
    "imports": {
        "#services/*": "./src/services/*",
        "#components/*": "./src/components/*",
        "#stores/*": "./src/stores/*",
        "#constants/*": "./src/constants/*",
        "#types/*": "./src/types/*",
        "#test/*": "./src/test/*"
    },
    "scripts": {
        "dev": "vite",
        "build": "vite build",
        "type-check": "tsc --noEmit",
        "lint": "eslint . --ext ts,svelte --report-unused-disable-directives --max-warnings 0",
        "format": "prettier --write \"src/**/*.{ts,svelte,json,css.ts}\"",
        "format:check": "prettier --check \"src/**/*.{ts,svelte,json,css.ts}\"",
        "test": "vitest run",
        "test:watch": "vitest",
        "test:coverage": "vitest run --coverage"
    },
    "dependencies": {
        "@personal/uikit": "workspace:*",
        "svelte-dnd-action": "^0.9.69"
    },
    "devDependencies": {
        "@eslint/js": "catalog:",
        "@sveltejs/vite-plugin-svelte": "catalog:",
        "@testing-library/jest-dom": "catalog:",
        "@testing-library/svelte": "catalog:",
        "@testing-library/user-event": "catalog:",
        "@types/chrome": "catalog:",
        "@vanilla-extract/vite-plugin": "catalog:",
        "@vitest/coverage-v8": "catalog:",
        "eslint": "catalog:",
        "eslint-plugin-svelte": "catalog:",
        "globals": "catalog:",
        "jsdom": "catalog:",
        "prettier": "catalog:",
        "svelte": "catalog:",
        "typescript": "catalog:",
        "typescript-eslint": "catalog:",
        "vite": "catalog:",
        "vite-plugin-web-extension": "catalog:",
        "vitest": "catalog:"
    }
}
