{
    "extends": "../../config/tsconfig.svelte.json",
    "compilerOptions": {
        "lib": ["ESNext", "DOM", "DOM.Iterable", "WebWorker"],
        "types": ["chrome", "svelte"],
        "baseUrl": ".",
        "paths": {
            "#services/*": ["src/services/*"],
            "#components/*": ["src/components/*"],
            "#stores/*": ["src/stores/*"],
            "#constants/*": ["src/constants/*"],
            "#types/*": ["src/types/*"],
            "#test/*": ["src/test/*"]
        }
    },
    "include": ["src/**/*", "src/vite-env.d.ts"],
    "exclude": ["node_modules", "dist"]
}
